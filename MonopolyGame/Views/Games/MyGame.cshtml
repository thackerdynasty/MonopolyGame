@model Game;
@inject ApplicationDbContext _context;
@{
    ViewData["Title"] = "Game";
    List<Player> players = _context.Players.Where(p => p.GameId == Model.Id).ToList();
    int playerLen = players.Count;
}

<div class="text-center">
    <h1 class="display-4">Your Game</h1>
</div>

<div class="d-flex flex-row">
    <div>
        <div style="position:relative; width:800px; height:800px;">
            <img src="~/images/MonopolyBoard.jpg" alt="Monopoly Board" style="width:800px; height:800px;"/>
            <div id="player1" style="position:absolute; left:720px; top:720px; width:40px; height:40px; z-index:10;">
                <img src="~/images/PlayerToken1.png" style="width:100%;"/>
            </div>
        </div>

        <button id="moveBtn">Move Player 1 Space</button>
        <div style="margin-bottom: 20px;">
            <button id="rollDiceBtn">Roll Dice</button>
            <span id="diceResult" style="margin-left:15px; font-weight:bold;"></span>
            <span id="spaceResult" style="margin-left:15px; font-weight:bold;"></span>
        </div>

        <ul>
            @foreach (var player in players)
            {
                <li>
                    <strong>Player @player.Id:</strong> @player.Name (Turn: @player.TurnNumber)
                </li>
            }
        </ul>
    </div>
    <div class="p-2 info-bar">
        <ul class="nav nav-tabs">
            @foreach (var player in players)
            {
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="@player.Id-tab" data-bs-toggle="tab" data-bs-target="#@player.Id-tab-pane" type="button" role="tab" aria-controls="@player.Id-tab-pane" aria-selected="true">@player.Name</button>
                </li>
            }
        </ul>
        <div class="tab-content" id="playerTabContent">
            @for(var i = 0; i < playerLen; i++)
            {
                @if (i == 0)
                {
                    <div class="tab-pane fade show active" id="@players[i].Id-tab-pane" role="tabpanel" aria-labelledby="@players[i].Id-tab" tabindex="0">
                        @{ Player player = players[i]; }
                        <h3>@player.Name's Info</h3>
                        <p>Turn Number: @player.TurnNumber</p>
                        <p>Cash: @player.Money</p>
                        <ul class="list-group">
                            @* example until properties are integrated into backend *@
                            <li class="list-group-item d-flex justify-content-between align-items-center property-item">
                                <div>
                                    <span class="property-dot" style="background:#964B00;"></span>
                                    <a href="#" class="property-link">Mediterranean Avenue</a>
                                </div>
                                <span class="badge bg-secondary rounded-pill">$60</span>
                            </li>

                            <li class="list-group-item d-flex justify-content-between align-items-center property-item">
                                <div>
                                    <span class="property-dot" style="background:#ff0000;"></span>
                                    <a href="#" class="property-link">Kentucky Avenue</a>
                                </div>
                                <span class="badge bg-secondary rounded-pill">$220</span>
                            </li>
                        </ul>

                        <!-- Chance action buttons -->
                        <div class="mt-3 d-flex gap-2">
                            <a href="#" class="btn btn-sm btn-warning text-white chance-btn">
                                <i class="bi bi-card-text me-1"></i> Draw Chance
                            </a>

                            <a href="#" class="btn btn-sm btn-outline-primary chance-btn">
                                <i class="bi bi-info-circle me-1"></i> View Chance
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="tab-pane fade" id="@players[i].Id-tab-pane" role="tabpanel" aria-labelledby="@players[i].Id-tab" tabindex="0">...</div>
                }
            }
        </div>
    </div>
</div>


<script>
    window.playersData = [
        @foreach(Player p in players)
        {
            <text>,
                {
                    id: @p.Id,
                    turnNumber: @p.TurnNumber,
                    name: "@p.Name",
                },
            </text>
            @if (p != players.Last())
            {
                <text>,</text>
            }
        }
    ];
    window.gameData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model));
</script>
<script src="~/js/boardSpaces.js"></script>
<script src="~/js/playerMovement.js"></script>